<%= form_with(model: task, local: false) do |form| %>
  <div class="modal-body">
    <div id="errorArea"></div>
    <div class="form-group mt-3">
      <%= form.label :position %>
      <%= form.number_field :position, class: "form-control"  %>
    </div>

    <div class="form-group mt-3">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group mt-3 mb-5">
      <%= form.label :is_done %>
      <%= form.select :is_done, [["No", false], ["Yes", true]], {}, class: "form-select form-control" %>
    </div>

    <div class="modal-footer">
      <%= form.submit class: "btn btn-primary btn-lg" %>
      <button type="button" class="btn btn-secondary btn-lg close-modal" data-bs-dismiss="modal">Close</button>
    </div>
  </div>
<% end %>

