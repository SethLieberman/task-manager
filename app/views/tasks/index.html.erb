<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-lg-12 mx-md-auto">
    <h1>Tasks</h1>

      <%= link_to 'New Task', new_task_path, class: "btn btn-primary btn-lg mb-4" %>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Position</th>
            <th>Title</th>
            <th>Is done</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td><%= task.position %></td>
              <td><%= task.title %></td>
              <td><%= task.is_done %></td>
              <td>
                <div class="dropdown">
                  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                    Action
                  </button>
                  <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                    <li><%= link_to 'Show', task, class: "dropdown-item" %></li>
                    <li><%= link_to 'Edit', edit_task_path(task), class: "dropdown-item" %></li>
                    <li><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" %></li>
                  </ul>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
