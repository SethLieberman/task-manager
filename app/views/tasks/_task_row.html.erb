<tr id="taskRow_<%= task.id %>" data-task="true" data-task-position=<%= task.position %>>
  <td><%= task.position %></td>
  <td><%= task.title %></td>
  <td><%= task.is_done == true ? "Yes" : "No" %></td>
  <td class="text-center col-lg-3 mx-md-auto">
    <%= link_to 'Edit', edit_task_path(task), class: "btn btn-primary btn-lg", data: { bs_toggle: 'modal', bs_target: '#editTaskModal', remote: true } %> |
    <%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?', remote: true }, class: "btn btn-primary btn-lg" %>
  </td>
</tr>
